<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Server & Service Status Tree</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f4f4f4; margin: 0; padding: 20px; }
        h1 { text-align: center; }
        .server { background: #fff; margin: 10px auto; padding: 10px; border-radius: 8px; box-shadow: 0 0 5px rgba(0,0,0,0.1); max-width: 600px; }
        .server-header { display: flex; align-items: center; cursor: pointer; }
        .toggle { margin-right: 10px; font-weight: bold; }
        .services { display: none; margin-left: 20px; margin-top: 10px; }
        .service { display: flex; justify-content: space-between; padding: 4px 0; border-bottom: 1px solid #ddd; }
        .service:last-child { border-bottom: none; }
        .status-running { color: green; font-weight: bold; }
        .status-stopped, .status-error { color: red; font-weight: bold; }
        .refresh { text-align: center; margin: 20px; }
        button { padding: 8px 16px; font-size: 14px; cursor: pointer; border: none; background: #007bff; color: #fff; border-radius: 4px; }
        button:hover { background: #0056b3; }
    </style>
</head>
<body>
    <h1>Server & Service Status Tree</h1>
    <div class="refresh">
        <button onclick="fetchStatus()">Refresh Status</button>
    </div>
    <div id="status-container"></div>

    <script>
        async function fetchStatus() {
            const container = document.getElementById('status-container');
            container.innerHTML = '<p>Loading...</p>';
            try {
                const response = await fetch('/status');
                const data = await response.json();
                container.innerHTML = '';
                data.forEach((server, index) => {
                    const serverDiv = document.createElement('div');
                    serverDiv.className = 'server';

                    const header = document.createElement('div');
                    header.className = 'server-header';
                    header.innerHTML = `<span class="toggle" id="toggle-${index}">[+]</span> <h2>${server.name}</h2>`;
                    header.onclick = () => toggleServices(index);

                    const servicesDiv = document.createElement('div');
                    servicesDiv.className = 'services';
                    servicesDiv.id = `services-${index}`;

                    server.services.forEach(service => {
                        const statusClass = service.status.toLowerCase().includes('running') ? 'status-running'
                                          : (service.status.toLowerCase().includes('stopped') ? 'status-stopped' : 'status-error');
                        servicesDiv.innerHTML += `
                            <div class="service">
                                <span>${service.name}</span>
                                <span class="${statusClass}">${service.status}</span>
                            </div>`;
                    });

                    serverDiv.appendChild(header);
                    serverDiv.appendChild(servicesDiv);
                    container.appendChild(serverDiv);
                });
            } catch (error) {
                container.innerHTML = `<p style="color:red;">Failed to load status: ${error}</p>`;
            }
        }

        function toggleServices(index) {
            const servicesDiv = document.getElementById(`services-${index}`);
            const toggleSymbol = document.getElementById(`toggle-${index}`);
            if (servicesDiv.style.display === 'none' || servicesDiv.style.display === '') {
                servicesDiv.style.display = 'block';
                toggleSymbol.textContent = '[-]';
            } else {
                servicesDiv.style.display = 'none';
                toggleSymbol.textContent = '[+]';
            }
        }

        window.onload = fetchStatus;
    </script>
</body>
</html>
