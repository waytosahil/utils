<!DOCTYPE html>
<html>
<head>
    <title>Service Status Dashboard</title>
    <style>
        .server { font-weight: bold; cursor: pointer; margin-top: 10px; }
        .service { margin-left: 20px; display: none; }
        .running { color: green; }
        .stopped { color: red; }
        .error { color: orange; }
        #refresh-btn { margin-bottom: 15px; padding: 8px 16px; font-size: 14px; }
    </style>
</head>
<body>
    <h1>Service Status Dashboard</h1>
    <button id="refresh-btn" onclick="fetchStatus()">Refresh</button>
    <div id="status-container"></div>

    <script>
        async function fetchStatus() {
            const response = await fetch('/status');
            const data = await response.json();

            const container = document.getElementById('status-container');
            container.innerHTML = '';

            // Group by server
            const serverMap = {};
            data.forEach(item => {
                if (!serverMap[item.server]) {
                    serverMap[item.server] = [];
                }
                serverMap[item.server].push(item);
            });

            // Build tree
            Object.keys(serverMap).forEach(server => {
                const serverDiv = document.createElement('div');
                serverDiv.className = 'server';
                serverDiv.textContent = `+ ${server}`;
                serverDiv.onclick = function() {
                    const services = this.nextElementSibling;
                    if (services.style.display === 'none') {
                        services.style.display = 'block';
                        this.textContent = `âˆ’ ${server}`;
                    } else {
                        services.style.display = 'none';
                        this.textContent = `+ ${server}`;
                    }
                };
                container.appendChild(serverDiv);

                const servicesDiv = document.createElement('div');
                servicesDiv.className = 'service';
                servicesDiv.style.display = 'none';

                serverMap[server].forEach(item => {
                    const serviceDiv = document.createElement('div');
                    let statusClass = '';
                    if (item.status.includes('Running')) {
                        statusClass = 'running';
                    } else if (item.status.includes('Stopped')) {
                        statusClass = 'stopped';
                    } else {
                        statusClass = 'error';
                    }
                    serviceDiv.innerHTML = `${item.service}: <span class="${statusClass}">${item.status}</span>`;
                    servicesDiv.appendChild(serviceDiv);
                });

                container.appendChild(servicesDiv);
            });
        }

        // Initial load
        fetchStatus();
    </script>
</body>
</html>
